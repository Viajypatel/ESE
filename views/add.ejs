<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 text-white">
    <h1 class="text-xl">Creadte a new post</h1>
    <hr class="opacity-20 mt-2">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2" type="file" name="postimage">
        <input class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2" type="text" placeholder="title" name="title">
        <textarea class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2" type="text" placeholder="desciption" name="description"></textarea>
        <input class=" block w-1/3 px-3 py-2 border-2 rounded-md mt-2 bg-red-600" type="submit">
    </form>
</div>
