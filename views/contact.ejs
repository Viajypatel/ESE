
<% include ./partials/header.ejs %>

<div class="contact-page w-full min-h-screen bg-zinc-800 text-white p-6">
    <h1 class="text-3xl font-bold mb-4">Contact Us</h1>
    <p class="text-lg leading-relaxed">
        If you have any questions, feedback, or need assistance, feel free to reach out to us. We're here to help and ensure your experience on Empowering Secondhand Exchange is smooth and enjoyable.
    </p>
    <p class="text-lg leading-relaxed mt-4">
        You can contact us at: <a href="mailto:example@enal.com" class="text-blue-400 underline">example@email.com</a>
    </p>
    <form action="/send-contact" method="POST" class="mt-6">
        <div class="mb-4">
            <label for="name" class="block text-sm font-medium">Your Name</label>
            <input type="text" name="name" id="name" class="w-full p-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
        </div>
        <div class="mb-4">
            <label for="email" class="block text-sm font-medium">Your Email</label>
            <input type="email" name="email" id="email" class="w-full p-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
        </div>
        <div class="mb-4">
            <label for="message" class="block text-sm font-medium">Your Message</label>
            <textarea name="message" id="message" rows="5" class="w-full p-2 bg-gray-700 border border-gray-600 rounded-lg text-white"></textarea>
        </div>
        <button type="submit" class="bg-blue-600 px-4 py-2 rounded-lg text-white">Send Message</button>
    </form>
</div>
<script>
              document.addEventListener("DOMContentLoaded", function () {
            const cartCounter = document.getElementById("cartCounter");

            // Load saved items from local storage
            const savedItems = JSON.parse(localStorage.getItem("cart")) || [];

            // Function to update the cart counter
            function updateCartCounter() {
                cartCounter.textContent = `(${savedItems.length})`; // Update cart counter
                cartCounter.classList.remove("hidden"); // Make cart counter visible
            }

            // Initial cart counter update
            updateCartCounter();
        });

</script>
