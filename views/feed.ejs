<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(elem){ %>
            <div class="card w-36">
                <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                  <img src="/images/uploads/<%= elem.image %>" class="w-full h-full object-cover" alt="imgg">
                </div>
                <h3 class="mt-2 text-sm">
                  <%= elem.title %>
                </h3>
                <h3 class="mt-2 text-sm">
                  <!-- Link to show all posts by this user -->
                  <a href="/user/posts/<%= elem.user._id %>">Chek all Post:<span class="text-red-400"><%= elem.user.username %></span></a>
                </h3>
            </div>
        <% }) %>
        
    </div>
</div>
<% include ./partials/footer.ejs %>