<% include ./partials/header.ejs %>
<div class="flex items-center justify-center min-h-screen bg-white">
  <div class="bg-white border border-2 border-black rounded-lg shadow-md p-8 w-full max-w-md">
    <h1 class="text-3xl font-semibold text-center mb-6">Welcome to Empowering Secondhand Exchange</h1>
    <form action="/login" method="post">
      <div class="mb-4">
        <label for="username" class="block text-gray-700 font-semibold mb-2">Username</label>
        <input id="username" class="form-input w-full border border-gray-300 rounded-md py-2 px-3" type="text" name="username" placeholder="Enter your username" required>
      </div>
      <div class="mb-6">
        <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
        <input id="password" class="form-input w-full border border-gray-300 rounded-md py-2 px-3" type="password" name="password" placeholder="Enter your password" required>
      </div>
      <div class="flex items-center justify-between">
        <a class="text-sm text-gray-600 hover:underline" href="/register">Forgot your password?</a>
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded-md">Login</button>
      </div>
    </form>
    <p class="mt-4 text-center text-gray-600">By continuing, you agree to ESE's terms of service.</p>
    <p class="mt-4 text-center text-gray-700">Don't have an account? <a class="text-red-600 hover:underline" href="/register">Sign up here</a></p>
  </div>
</div>
<% include ./partials/footer.ejs %>
