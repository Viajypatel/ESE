<% include ./partials/header.ejs %>
<div class="w-full h-screen flex items-center justify-center bg-cover" style="background-image: url('/images/uploads/bgimg.webp')">
  <div class="w-64 h-[70vh] bg-white rounded-lg px-4 py-4">
    <h1 class="text-3xl text-center leading-none mb-3 tracking-tighter">Welcome to Pinterest.</h1>
    <form action="/login" method="post">
      <input class="block mt-3 w-full px-3 py-2" type="username" name="username" placeholder="Username">
      <input class="block mt-3 w-full px-3 py-2" type="password" name="password" placeholder="Password">
      <a class="inline-block mt-2 text-zinc-500 font-semibold" href="/register">Forgot password ?</a>
      <input class="block mt-3 w-full px-3 py-2 bg-red-600 rounded-lg text-white" type="submit" value="Login">
      <p class="font-semibold text-zinc-700 mt-6 text-center leading-none">By continuing you agree to Pinterest terms of service</p>
    </form>
    <a class="inline-block mt-2 text-sm font-bold w-full text-center text-red-600" href="/register">Create New Account</a>
  </div>
</div>
