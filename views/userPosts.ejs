<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-gray-900 text-white py-8 px-4">
  <h2 class="text-center font-bold text-3xl mb-6">Posts by <%= user.username %></h2>
  <div class="container mx-auto max-w-screen-lg grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% user.posts.forEach(function(post){ %>
      <div class="bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <div class="w-full h-40 md:h-48 overflow-hidden">
          <img src="/images/uploads/<%= post.image %>" class="w-full h-full object-cover" alt="img">
        </div>
        <div class="p-4">
          <h3 class="text-xl font-semibold mb-2">Title: <%= post.title %></h3>
          <p class="text-md mb-4">Description: <%= post.description %></p>
          <button class="block w-full px-4 py-2 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700">Add to Cart</button>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<% include ./partials/footer.ejs %>
